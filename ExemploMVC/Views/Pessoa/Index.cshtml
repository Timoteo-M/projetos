@model System.Data.DataTable
@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Pessoas</h1>
<!--Criando uma tabela para mostrar os dados de forma organizado! -->
<table class="table table-bordered table-striped">
    <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Email</th>
        <th>Telefone</th>
    </tr>
<!--O laço FOR será repetido quantas vezes forem o número de registros recuperados -->
    @for(int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td>@Model.Rows[i][0]</td>
            <td>@Model.Rows[i][1]</td>
            <td>@Model.Rows[i][2]</td>
            <td>@Model.Rows[i][3]</td>
        </tr>
    }
</table>

<a href="@Url.Action("Create","Pessoa")">Novo</a>
